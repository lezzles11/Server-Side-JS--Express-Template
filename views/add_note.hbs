<div class="container">
    <form id="myForm">
        <div class="form_item">
            <label>Name:</label>
            <input type="text" id="name" name="name">
        </div>

        <div class="form_item">
            <label>Title of the note:</label>
            <input type="text" id="title" name="title">
        </div>

        <div class="form_item">
            <label>Message:</label>
            <textarea id="description" name="description"></textarea>
        </div>
        <button type="submit"> Add note </button>
    </form>

</div>


<script>

    $( '#myForm' ).on( 'submit', ( e ) => {
        e.preventDefault();

        const jsonData = {
            name: $( '#name' ).val(),
            title: $( '#title' ).val(),
            description: $( '#description' ).val()
        }

        $.ajax( {
            type: 'POST',
            url: '/api/add_note',
            data: JSON.stringify( jsonData ),
            contentType: 'application/json',
            success: ( data, status ) => {
                window.location.href = "/";
            },
            error: () => {
                alert( 'problem' );
            }
        } )

    } )

</script>